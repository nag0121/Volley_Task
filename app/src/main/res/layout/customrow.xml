<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/listview_background">
    <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/tv_biller_custom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="biller"
        android:textSize="15dp"
        android:gravity="start"
        android:padding="5dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="#FF4D80"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/listview_divider"
        android:background="#464646"/>
    <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/tv_amount_custom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:layout_gravity="center"
        android:text="amount"
        android:gravity="start"
        android:padding="5dp"
        android:paddingBottom="5dp"
        android:textStyle="bold"
        android:textColor="#464646"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/listview_divider"
        android:background="#464646"/>
    <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/tv_timestamp_custom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.7"
        android:text="timestamp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="start"
        android:padding="5dp"
        android:textSize="15dp"
        android:textColor="#464646"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/listview_divider"
        android:background="#464646"/>
    <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/tv_more_custom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.4"
        android:layout_gravity="center"
        android:text="more"
        android:textStyle="bold"
        android:padding="5dp"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="#464646"/>
    <ImageView
        android:id="@+id/iv_arrow_custom"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_weight="0.7"
        android:src="@drawable/ic_chevron_right_black_24dp"
        android:tint="#FF4D80"
        android:paddingRight="5dp"
        />


</LinearLayout>